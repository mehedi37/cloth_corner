@model cloth_corner.Models.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h2>@ViewData["Title"]</h2>

@if (Model == null || Model.CartDetails.Count == 0)
{
    <p>Your cart is empty.
        <a asp-action="Index" asp-controller="Home">Continue Shopping</a>
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Products?.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@{
                            var total_price = item.Price * item.Quantity;
                        }
                        @total_price.ToString("C")
                    </td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="cartDetailsId" value="@item.CartDetailsId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Total: @Model.TotalPrice.ToString("C")</h3>
    <a asp-action="Checkout" class="btn btn-primary">Checkout</a>
    <form asp-action="ClearCart" method="post" class="mt-3">
        <button type="submit" class="btn btn-warning">Empty Cart</button>
    </form>
}
